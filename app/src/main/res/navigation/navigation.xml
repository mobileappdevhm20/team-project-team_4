<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation"
    app:startDestination="@id/explanationDialog">
    <fragment
        android:id="@+id/taskListFragment"
        android:name="edu.hm.cs.ma.todoguru.task.list.TaskListFragment"
        android:label="TaskListFragment" >
        <action
            android:id="@+id/action_taskListFragment_to_insertTaskDialog"
            app:destination="@id/insertTaskDialog" />
        <action
            android:id="@+id/action_taskListFragment_to_updateTaskDialog"
            app:destination="@id/updateTaskDialog" />
        <action
            android:id="@+id/action_taskListFragment_to_deleteDialog"
            app:destination="@id/deleteDialog" />
    </fragment>
    <dialog
        android:id="@+id/insertTaskDialog"
        android:name="edu.hm.cs.ma.todoguru.task.dialog.InsertTaskDialog"
        android:label="InsertTaskDialog" >
    </dialog>
    <dialog
        android:id="@+id/updateTaskDialog"
        android:name="edu.hm.cs.ma.todoguru.task.dialog.UpdateTaskDialog"
        android:label="UpdateTaskDialog" >
        <argument
            android:name="task"
            app:argType="edu.hm.cs.ma.todoguru.database.Task" />
    </dialog>
    <dialog
        android:id="@+id/deleteDialog"
        android:name="edu.hm.cs.ma.todoguru.task.dialog.DeleteDialog"
        android:label="DeleteDialog" >
        <argument
            android:name="taskList"
            app:argType="edu.hm.cs.ma.todoguru.database.Task[]" />
    </dialog>
    <fragment
        android:id="@+id/explanationDialog"
        android:name="edu.hm.cs.ma.todoguru.ExplanationFragment"
        android:label="ExplanationDialog" >
        <action
            android:id="@+id/action_explanationDialog_to_explanationDialogTwo"
            app:destination="@id/explanationDialogTwo" />
        <action
            android:id="@+id/action_explanationDialog_to_taskListFragment2"
            app:destination="@id/taskListFragment" />
    </fragment>
    <fragment
        android:id="@+id/explanationDialogTwo"
        android:name="edu.hm.cs.ma.todoguru.ExplanationFragmentTwo"
        android:label="ExplanationDialogTwo" >
        <action
            android:id="@+id/action_explanationDialogTwo_to_explanationDialogThree"
            app:destination="@id/explanationDialogThree" />
        <action
            android:id="@+id/action_explanationDialogTwo_to_explanationDialog"
            app:destination="@id/explanationDialog" />
        <action
            android:id="@+id/action_explanationDialogTwo_to_taskListFragment"
            app:destination="@id/taskListFragment" />
    </fragment>
    <fragment
        android:id="@+id/explanationDialogThree"
        android:name="edu.hm.cs.ma.todoguru.ExplanationFragmentThree"
        android:label="ExplanationDialogThree" >
        <action
            android:id="@+id/action_explanationDialogThree_to_taskListFragment"
            app:destination="@id/taskListFragment" />
        <action
            android:id="@+id/action_explanationDialogThree_to_explanationDialogTwo"
            app:destination="@id/explanationDialogTwo" />
        <action
            android:id="@+id/action_explanationDialogThree_to_explanationDialogTwo2"
            app:destination="@id/explanationDialogTwo" />
    </fragment>
</navigation>